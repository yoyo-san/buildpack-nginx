worker_processes 1;
error_log stderr;
pid nginx.pid;
daemon off;

events {
  worker_connections 4096;
}

http {
  types_hash_max_size 2048;
  include mime.types;
  server {
    listen <%= ENV["PORT"] %>;
    server_name  _;
    
    location ~* \.html$ {
      root /app/www/dist;
      expires 5m;
      try_files $uri /index.html;
    }
    location / {
      root /app/www/dist;
      try_files $uri /index.html;
      expires 1d;
    }

    location /admin {
      alias /app/www/dist;
      try_files $uri /admin/index.html;
      expires 1d;
    }
  }
}
